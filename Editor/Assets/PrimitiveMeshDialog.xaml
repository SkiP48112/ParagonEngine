<Window
    x:Class="Editor.Assets.PrimitiveMeshDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ed="clr-namespace:Editor.Editors"
    xmlns:local="clr-namespace:Editor.Assets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:utl="clr-namespace:Editor.Utilities.Controls"
    Title="Primitive Mesh"
    Width="800"
    Height="600"
    Foreground="{StaticResource Editor.FontBrush}"
    ResizeMode="NoResize"
    Style="{StaticResource ParagonDialogStyle}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <ed:GeometryEditor />
    </Window.DataContext>

    <Window.Resources>
        <ObjectDataProvider
            x:Key="dataFromEnum"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:PrimitiveMeshType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="5,5,0,0" />
            <Setter Property="FontSize" Value="9" />
        </Style>
    </Window.Resources>

    <DockPanel Background="{StaticResource Editor.Window.GrayBrush2}">
        <Border
            Height="32"
            Margin="0,0,0,1"
            VerticalAlignment="Top"
            Background="{StaticResource Editor.Window.GrayBrush3}"
            DockPanel.Dock="Top">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.3"
                    ShadowDepth="0" />
            </Border.Effect>

            <StackPanel Margin="5,0" Orientation="Horizontal">
                <ComboBox
                    x:Name="primTypeComboBox"
                    Width="100"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Source={StaticResource dataFromEnum}}"
                    SelectedIndex="0"
                    SelectionChanged="OnPrimitiveTypeComboBox_SelectionChanged" />

                <CheckBox
                    x:Name="textureCheckBox"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Click="OnTextureComboBox_Click"
                    Content="Show textured"
                    Foreground="{StaticResource Editor.FontBrush}"
                    IsChecked="True" />
            </StackPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" MaxWidth="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  PLANE SETTINGS  -->
            <StackPanel Background="{StaticResource Editor.Window.GrayBrush3}">
                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem, ElementName=primTypeComboBox}" Value="{x:Static local:PrimitiveMeshType.Plane}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Grid Margin="0,5">
                    <Border
                        Margin="5"
                        Background="{StaticResource Editor.Window.GrayBrush4}"
                        BorderBrush="{StaticResource Editor.Window.GrayBrush6}"
                        BorderThickness="1"
                        CornerRadius="3">
                        <StackPanel Margin="5,15,5,5">
                            <DockPanel Margin="5">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Width" />
                                <TextBox
                                    Width="30"
                                    DockPanel.Dock="Right"
                                    Text="{Binding Path=Value, ElementName=xSliderPlane}" />
                                <Slider
                                    x:Name="xSliderPlane"
                                    HorizontalAlignment="Stretch"
                                    Interval="1"
                                    IsSnapToTickEnabled="True"
                                    Maximum="10"
                                    Minimum="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="OnSlider_ValueChanged" />
                            </DockPanel>

                            <DockPanel Margin="5">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Length" />
                                <TextBox
                                    Width="30"
                                    DockPanel.Dock="Right"
                                    Text="{Binding Path=Value, ElementName=zSliderPlane}" />
                                <Slider
                                    x:Name="zSliderPlane"
                                    HorizontalAlignment="Stretch"
                                    Interval="1"
                                    IsSnapToTickEnabled="True"
                                    Maximum="10"
                                    Minimum="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="OnSlider_ValueChanged" />
                            </DockPanel>
                        </StackPanel>
                    </Border>

                    <Label
                        Padding="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Segments"
                        Foreground="{StaticResource Editor.FontBrush}" />
                </Grid>

                <Grid Margin="0,5">
                    <Border
                        Margin="5"
                        Background="{StaticResource Editor.Window.GrayBrush4}"
                        BorderBrush="{StaticResource Editor.Window.GrayBrush6}"
                        BorderThickness="1"
                        CornerRadius="1">
                        <StackPanel Margin="5,15,5,5">
                            <DockPanel Margin="5,5,5,0">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Width" />
                                <utl:ScalarBox
                                    x:Name="widthScalarBoxPlane"
                                    ValueChanged="OnScalarBox_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                            <DockPanel Margin="5,5,5,0">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Length" />
                                <utl:ScalarBox
                                    x:Name="lengthScalarBoxPlane"
                                    ValueChanged="OnScalarBox_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                        </StackPanel>
                    </Border>

                    <Label
                        Padding="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Size"
                        Foreground="{StaticResource Editor.FontBrush}" />
                </Grid>

                <Button
                    Width="96"
                    Margin="5,0"
                    Content="Save" 
                    Click="OnSaveButton_Click"/>

            </StackPanel>

            <!--  CUBE SETTINGS  -->

            <!--  UVSPHERE SETTINGS  -->
            <StackPanel Background="{StaticResource Editor.Window.GrayBrush3}">
                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItem, ElementName=primTypeComboBox}" Value="{x:Static local:PrimitiveMeshType.UvSphere}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Grid Margin="0,5">
                    <Border
                        Margin="5"
                        Background="{StaticResource Editor.Window.GrayBrush4}"
                        BorderBrush="{StaticResource Editor.Window.GrayBrush6}"
                        BorderThickness="1"
                        CornerRadius="3">
                        <StackPanel Margin="5,15,5,5">
                            <DockPanel Margin="5">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Lon." />
                                <TextBox
                                    Width="30"
                                    DockPanel.Dock="Right"
                                    Text="{Binding Path=Value, ElementName=xSliderUvSphere}" />
                                <Slider
                                    x:Name="xSliderUvSphere"
                                    HorizontalAlignment="Stretch"
                                    Interval="1"
                                    IsSnapToTickEnabled="True"
                                    Maximum="64"
                                    Minimum="3"
                                    ValueChanged="OnSlider_ValueChanged"
                                    Value="24" />
                            </DockPanel>

                            <DockPanel Margin="5">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Lat." />
                                <TextBox
                                    Width="30"
                                    DockPanel.Dock="Right"
                                    Text="{Binding Path=Value, ElementName=ySliderUvSphere}" />
                                <Slider
                                    x:Name="ySliderUvSphere"
                                    HorizontalAlignment="Stretch"
                                    Interval="1"
                                    IsSnapToTickEnabled="True"
                                    Maximum="64"
                                    Minimum="2"
                                    ValueChanged="OnSlider_ValueChanged"
                                    Value="12" />
                            </DockPanel>
                        </StackPanel>
                    </Border>

                    <Label
                        Padding="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Segments"
                        Foreground="{StaticResource Editor.FontBrush}" />
                </Grid>

                <Grid Margin="0,5">
                    <Border
                        Margin="5"
                        Background="{StaticResource Editor.Window.GrayBrush4}"
                        BorderBrush="{StaticResource Editor.Window.GrayBrush6}"
                        BorderThickness="1"
                        CornerRadius="1">
                        <StackPanel Margin="5,15,5,5">
                            <DockPanel Margin="5,5,5,0">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="X" />
                                <utl:ScalarBox
                                    x:Name="xScalarBoxUvSphere"
                                    ValueChanged="OnScalarBox_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                            <DockPanel Margin="5,5,5,0">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Y" />
                                <utl:ScalarBox
                                    x:Name="yScalarBoxUvSphere"
                                    ValueChanged="OnScalarBox_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                            <DockPanel Margin="5,5,5,0">
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Text="Z" />
                                <utl:ScalarBox
                                    x:Name="zScalarBoxUvSphere"
                                    ValueChanged="OnScalarBox_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                        </StackPanel>
                    </Border>

                    <Label
                        Padding="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Size"
                        Foreground="{StaticResource Editor.FontBrush}" />
                </Grid>

                <Grid Margin="0,5">
                    <Border
                        Margin="5"
                        Background="{StaticResource Editor.Window.GrayBrush4}"
                        BorderBrush="{StaticResource Editor.Window.GrayBrush6}"
                        BorderThickness="1"
                        CornerRadius="3">
                        <DockPanel Margin="5, 15, 5, 5">
                            <TextBlock
                                Width="40"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="Angle" />
                            <TextBox
                                Width="30"
                                DockPanel.Dock="Right"
                                Text="{Binding Path=Value, ElementName=angleSliderUvSphere}" />
                            <Slider
                                x:Name="angleSliderUvSphere"
                                HorizontalAlignment="Stretch"
                                Interval="1"
                                IsSnapToTickEnabled="True"
                                Maximum="180"
                                Minimum="0"
                                Value="178"
                                ValueChanged="OnSlider_ValueChanged" />
                        </DockPanel>
                    </Border>

                    <Label
                        Padding="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Smoothing Angle"
                        Foreground="{StaticResource Editor.FontBrush}" />
                </Grid>

                <Button
                    Width="96"
                    Margin="5,0"
                    Content="Save" 
                    Click="OnSaveButton_Click"/>

            </StackPanel>

            <ed:GeometryView Grid.Column="1" DataContext="{Binding MeshRenderer}" />
            <StackPanel
                Grid.Column="1"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsHitTestVisible="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource Editor.RedBrush}" Text="{Binding MeshRenderer.CameraPosition.X, StringFormat=G5}" />
                    <TextBlock
                        Margin="10,0"
                        Foreground="{StaticResource Editor.GreenBrush}"
                        Text="{Binding MeshRenderer.CameraPosition.Y, StringFormat=G5}" />
                    <TextBlock Foreground="{StaticResource Editor.BlueBrush}" Text="{Binding MeshRenderer.CameraPosition.Z, StringFormat=G5}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource Editor.OrangeBrush}" Text="{Binding MeshRenderer.Meshes[0].Positions.Count}" />
                    <TextBlock
                        Margin="10,0"
                        Foreground="{StaticResource Editor.OrangeBrush}"
                        Text="{Binding MeshRenderer.Meshes[0].Indices.Count}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
