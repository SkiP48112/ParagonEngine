<Window
    x:Class="Editor.GameDevelopment.CreateScriptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.GameDevelopment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="New Script"
    Width="400"
    Height="250"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{StaticResource ParagonDialogStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Border
        Margin="10"
        HorizontalAlignment="Stretch"
        Background="{StaticResource Editor.Window.GrayBrush3}"
        CornerRadius="3">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Opacity="0.6"
                ShadowDepth="2" />
        </Border.Effect>

        <Grid Margin="32,0">
            <!--  Busy animation  -->
            <Grid
                x:Name="busyAnimation"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Visibility="Hidden">
                <Grid.Resources>
                    <SolidColorBrush x:Key="busyBrush" Color="{StaticResource Editor.FontColor}" />
                </Grid.Resources>

                <Ellipse
                    Width="164"
                    Height="164"
                    Margin="-155,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    Stroke="{StaticResource busyBrush}"
                    StrokeThickness="1" />

                <Ellipse
                    Width="154"
                    Height="154"
                    Margin="-155,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    Stroke="{StaticResource busyBrush}"
                    StrokeDashArray="0.3, 0.22"
                    StrokeThickness="10">
                    <Ellipse.RenderTransform>
                        <RotateTransform />
                    </Ellipse.RenderTransform>

                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                        To="-360"
                                        Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <Ellipse
                    Width="174"
                    Height="174"
                    Margin="-155,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    Stroke="{StaticResource busyBrush}"
                    StrokeDashArray="0.5,1.186"
                    StrokeThickness="5">
                    <Ellipse.RenderTransform>
                        <RotateTransform />
                    </Ellipse.RenderTransform>

                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                        From="360"
                                        To="0"
                                        Duration="0:0:10" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <Polyline Stroke="{StaticResource busyBrush}">
                    <Polyline.Points>
                        <Point X="160" Y="35" />
                        <Point X="180" Y="20" />
                        <Point X="340" Y="20" />
                    </Polyline.Points>
                </Polyline>

                <TextBlock
                    Margin="0,20,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Foreground="White"
                    Text="Creating new script...">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="Opacity"
                                        From="1"
                                        To="0"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Grid>
            <!--  Busy animation  -->


            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <TextBlock
                    x:Name="messageTextBlock"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource Editor.RedBrush}"
                    TextWrapping="Wrap" />

                <StackPanel VerticalAlignment="Center">
                    <DockPanel>
                        <TextBlock
                            Width="72"
                            Style="{StaticResource LightTextBlockStyle}"
                            Text="Script Name" />
                        <TextBox x:Name="scriptName" TextChanged="OnScriptNameTextBox_TextChanged" />
                    </DockPanel>

                    <DockPanel Margin="0,5,0,0">
                        <TextBlock
                            Width="72"
                            Style="{StaticResource LightTextBlockStyle}"
                            Text="Path" />
                        <TextBox x:Name="scriptPath" TextChanged="OnScriptPathTextBox_TextChanged" />
                    </DockPanel>
                </StackPanel>

                <StackPanel
                    Margin="0,0,0,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Width="64"
                        Margin="32,0"
                        Click="OnCreateButton_Click"
                        Content="Create"
                        IsDefault="True" />
                    <Button
                        Width="64"
                        Content="Cancel"
                        IsCancel="True" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
