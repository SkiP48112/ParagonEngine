<UserControl
    x:Class="Editor.GameProject.OpenProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.GameProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:OpenProject />
    </UserControl.DataContext>
    <StackPanel Background="White">
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <ListBox
                x:Name="gameProjectsListBox"
                Width="195"
                Height="250"
                ItemsSource="{Binding GameProjects}"
                SelectedIndex="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <EventSetter Event="MouseDoubleClick" Handler="OnListBoxItem_MouseDoubleClick" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="0,0,5,0" Source="{Binding Icon}" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border
                Width="400"
                Height="250"
                Margin="5,0,0,0">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Path=SelectedItem.Screenshot, ElementName=gameProjectsListBox}" />
                </Border.Background>
            </Border>
        </StackPanel>
        <StackPanel
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="96"
                Click="OnOpenButton_Click"
                Content="Open"
                IsDefault="True" />
            <Button
                Width="96"
                Margin="30,0,0,0"
                Content="Exit"
                IsCancel="True" />
        </StackPanel>
    </StackPanel>
</UserControl>