<Window
    x:Class="Editor.GameProject.ProjectBrowsingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.GameProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Project Browser"
    Width="800"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <ToggleButton
                x:Name="openProjectButton"
                Click="OnOpenProjectButton_Click"
                Content="Open Project"
                FontSize="32"
                IsChecked="True" />
            <ToggleButton
                x:Name="createProjectButton"
                Margin="30,0,0,0"
                Click="OnCreateProjectButton_Click"
                Content="Create Project"
                FontSize="32"
                IsChecked="False" />
        </StackPanel>

        <StackPanel
            x:Name="browserContent"
            Grid.Row="1"
            Orientation="Horizontal">
            <local:OpenProjectView x:Name="openProjectView" />
            <local:CreateProjectView x:Name="createProjectView" />
        </StackPanel>
    </Grid>

</Window>
