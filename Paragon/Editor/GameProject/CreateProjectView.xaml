<UserControl
    x:Class="Editor.GameProject.CreateProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.GameProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    d:DataContext="{d:DesignInstance Type=local:CreateProject,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:CreateProject />
    </UserControl.DataContext>

    <Border
        Width="700"
        Margin="0,30"
        HorizontalAlignment="Center"
        Background="{StaticResource Editor.Window.GrayBrush3}"
        CornerRadius="3">
        <StackPanel>
            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ListBox
                    x:Name="templatesListBox"
                    Width="195"
                    Height="250"
                    ItemsSource="{Binding ProjectTemplates}"
                    SelectedIndex="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="0,0,5,0" Source="{Binding Icon}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="Bahnschrift condensed"
                                    FontSize="18"
                                    Text="{Binding Type}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border
                    Width="400"
                    Height="250"
                    Margin="5,0,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Path=SelectedItem.Screenshot, ElementName=templatesListBox}" />
                    </Border.Background>
                </Border>
            </StackPanel>
            <StackPanel
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="50"
                    Style="{StaticResource LightTextBlockStyle}"
                    Text="Name" />
                <TextBox Width="550" Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="50"
                    Style="{StaticResource LightTextBlockStyle}"
                    Text="Path" />
                <TextBox Width="500" Text="{Binding ProjectPath, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="45"
                    Margin="5,0,0,0"
                    Content="Browse" />
            </StackPanel>
            <StackPanel
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="96"
                    Click="OnCreateButton_Click"
                    Content="Create"
                    IsDefault="True"
                    IsEnabled="{Binding IsValid}" />
                <Button
                    Width="96"
                    Margin="30,0,0,0"
                    Content="Exit"
                    IsCancel="True" />
            </StackPanel>
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Foreground="{StaticResource Editor.RedBrush}"
                Text="{Binding ErrorMsg}" />
        </StackPanel>
    </Border>
</UserControl>
