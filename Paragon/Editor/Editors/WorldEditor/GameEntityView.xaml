<UserControl
    x:Class="Editor.Editors.GameEntityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <ScrollViewer.Style>
            <Style TargetType="ScrollViewer">
                <Style.Triggers>
                    <Trigger Property="DataContext" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ScrollViewer.Style>
        <StackPanel>
            <Border Height="32">
                <ToggleButton
                    x:Name="addComponent"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <ToggleButton.Content>
                        <DockPanel>
                            <TextBlock Margin="5,0,0,0" Text="Add Component" />
                            <Path
                                Margin="3,0,2,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M0, 0 L0, 2 L4, 6 L8, 2 L8, 0 L4, 4 z"
                                Fill="Black" />
                        </DockPanel>
                    </ToggleButton.Content>
                </ToggleButton>
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="78" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    Text="Name" />
                <TextBox
                    Grid.Column="1"
                    Tag="{Binding RenameCommand}"
                    Text="{Binding Name}" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0" Text="Enabled" />
                    <CheckBox
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Command="{Binding IsEnabledCommand}"
                        CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                        IsChecked="{Binding IsEnabled, Mode=OneWay}" />
                </StackPanel>
            </Grid>
            <ItemsControl ItemsSource="{Binding Components}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
